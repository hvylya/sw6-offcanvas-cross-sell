{% sw_extends '@Storefront/storefront/component/checkout/offcanvas-cart.html.twig' %}

{% block component_offcanvas_cart_items %}
    <ul class="offcanvas-cart-items list-unstyled" data-hv-offcanvas="minimal">
        {% if lastAdded %}
            {% sw_include '@Storefront/storefront/component/line-item/line-item.html.twig' with {
                lineItem: lastAdded,
                displayMode: 'offcanvas',
                redirectTo: 'frontend.cart.offcanvas'
            } %}
        {% endif %}
    </ul>

    {# async placeholder for cross-selling (loaded by HvOffcanvasCrossSell JS) #}
    <div class="hv-cross-sell"
         role="region"
         aria-live="polite"
         aria-label="{{ 'hv-offcanvas.checkout.offcanvasCrossSellHeader'|trans }}"
         data-hv-offcanvas-cross-sell
         data-timeout="5000"
         data-url="{{ path('frontend.hv.offcanvas.cross_sell', { productId: lastAdded.referencedId|default('') }) }}">
        <div class="hv-cross-sell__skeleton"></div>
    </div>
{% endblock %}
