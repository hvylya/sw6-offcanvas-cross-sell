{
  "name": "hvylya/sw6-offcanvas-cross-sell",
  "description": "Shopware 6 plugin: minimal off-canvas with cross-selling",
  "type": "shopware-platform-plugin",
  "version": "1.0.0",
  "license": "MIT",
  "authors": [
    {
      "name": "hvylya"
    }
  ],
  "require": {
    "php": "^8.2",
    "shopware/core": "~6.7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.10",
    "friendsofphp/php-cs-fixer": "^3.64"
  },
  "extra": {
    "shopware-plugin-class": "Hvylya\\OffCanvasCrossSell\\HvOffCanvasCrossSell",
    "label": {
      "en-GB": "Offcanvas Cross-Sell (minimal cart)",
      "de-DE": "Offcanvas Cross-Selling (Mini-Warenkorb)"
    },
    "description": {
      "en-GB": "Shows a minimal off-canvas after adding to cart: displays only the last added item and a selected cross-selling group. Opening the cart from the header keeps the regular off-canvas.",
      "de-DE": "Zeigt nach „In den Warenkorb“ ein minimales Off-Canvas: nur der zuletzt hinzugefügte Artikel und eine ausgewählte Cross-Selling-Gruppe. Über das Header-Icon bleibt der normale Warenkorb-Off-Canvas erhalten."
    }
  },
  "autoload": {
    "psr-4": {
      "Hvylya\\OffCanvasCrossSell\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Hvylya\\OffCanvasCrossSell\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "symfony/runtime": true
    }
  },
  "scripts": {
    "test:unit": "phpunit -c phpunit.unit.xml.dist",
    "test:int": "phpunit -c phpunit.integration.xml.dist",
    "test": "composer test:unit && composer test:int",
    "cs:fix": "php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes",
    "cs:check": "php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes --dry-run --diff",
    "phpstan": "phpstan analyse --configuration=phpstan.neon.dist",
    "lint": "composer cs:check && composer phpstan"
  }
}
